<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Paintspace" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:fontFamily">@font/rubik</item>
    </style>

    <style name="Theme.Paintspace" parent="Base.Theme.Paintspace" />

    <style name="Theme.PaintSpace.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenBackground">@color/light_blue_300</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="splashScreenIconSize">160dp</item>
        <item name="postSplashScreenTheme">@style/Theme.Paintspace</item>
    </style>

    <style name="ScreenBackground1">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ScreenBackground2">
        <item name="android:background">@color/grey_400</item>
    </style>

    <style name="ScreenBackground3">
        <item name="android:background">@color/blue_180</item>
    </style>

    <style name="ScreenEditTextStyle1">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textColorHint">@color/grey_300</item>
    </style>

    <style name="ScreenImageStyle1">
        <item name="tint">@color/grey_400</item>
    </style>

    <style name="ScreenImageStyle2">
        <item name="tint">@color/white</item>
    </style>

    <style name="ScreenImageStyle3">
        <item name="tint">@color/grey_400</item>
    </style>

    <style name="ScreenTextColor1">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="ScreenTextColor2">
        <item name="android:textColor">@color/black</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="ScreenTextColor3">
        <item name="android:textColor">@color/grey_300</item>
        <item name="drawableTint">@color/grey_300</item>
    </style>

    <style name="ScreenTextColor4">
        <item name="android:textColor">@color/grey_400</item>
        <item name="drawableTint">@color/grey_400</item>
    </style>

    <style name="ScreenTextColor5">
        <item name="android:textColor">@color/orange_200</item>
        <item name="drawableTint">@color/orange_200</item>
    </style>

    <style name="ScreenTextColor6">
        <item name="android:textColor">@color/blue_300</item>
        <item name="drawableTint">@color/blue_300</item>
    </style>

    <style name="ScreenTextColorWithBackground1">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:background">@color/grey_200</item>
        <item name="drawableTint">@color/grey_400</item>
    </style>

    <style name="ScreenTextColorWithBackground2">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_200</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="FabDrawingViewStyle1">
        <item name="tint">@color/grey_400</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="FabDrawingViewStyle2">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/blue_300</item>
    </style>

    <style name="FabDrawingViewStyle3">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/green_500</item>
    </style>

    <style name="FabDrawingViewStyle4">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/red_400</item>
    </style>

    <style name="ExtendedFabDrawingViewStyle1">
        <item name="iconTint">@color/white</item>
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/blue_300</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDrawingViewStyle1">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/blue_300</item>
    </style>

    <style name="ButtonStyle1">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/grey_400</item>
        <item name="rippleColor">@color/grey_200</item>
    </style>

    <style name="ButtonStyle2">
        <item name="backgroundTint">@color/blue_300</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/white</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ButtonStyle3">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/grey_400</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ButtonStyle4">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/red_400</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/red_400</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="ProgressBarStyle1">
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <style name="ProgressBarStyle2">
        <item name="android:indeterminateTint">@color/orange_200</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <style name="ScreenSearchViewColor" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorPrimary">@color/grey_400</item>
        <item name="android:textColorSecondary">@color/grey_400</item>
    </style>
</resources>